{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "composer install --optimize-autoloader --no-dev"
  },
  "deploy": {
    "startCommand": "php -S 0.0.0.0:$PORT -t ./",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "PHP_VERSION": {
      "value": "8.2"
    },
    "APP_ENV": {
      "value": "production"
    }
  }
}
